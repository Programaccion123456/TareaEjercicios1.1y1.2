<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#16C0CB" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 1.1 Calculadora" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="num1"
               Placeholder="NUMERO 1"
               Keyboard="Numeric">
            
        </Entry>
        <Entry x:Name="num2"
               Placeholder="NUMERO 2"
               Keyboard="Numeric">

        </Entry>

        <Button Text="SUMAR" x:Name="btnadition" Clicked="btnagregar_Clicked"></Button>
        <Button Text="RESTAR" x:Name="btnsubstraction" Clicked="btnsubstraction_Clicked"></Button>
        <Button Text="MULTIPLICAR" x:Name="btnmultiplication" Clicked="btnmultiplication_Clicked"></Button>
        <Button Text="DIVIDIR" x:Name="btndivision" Clicked="btndivision_Clicked"></Button>
        <Image Source="https://matematicasiesoja.files.wordpress.com/2015/05/0a12.jpg"
                   HeightRequest="200"
                   WidthRequest="500"
                   HorizontalOptions="CenterAndExpand"
                   Aspect="Fill"/>
    </StackLayout>

</ContentPage>
