<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Views.BindingPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://economipedia.com/wp-content/uploads/informaci%C3%B3n.png"
                   HeightRequest="200"
                   WidthRequest="600"
                   HorizontalOptions="CenterAndExpand"
                   Aspect="Fill"/>
            <Label Text="NOMBRE:"></Label>
            <Entry x:Name="txtnombre"></Entry>

            <Label Text="APELLIDO:"></Label>
            <Entry x:Name="txtapellido"></Entry>

            <Label Text="EDAD:"></Label>
            <Entry x:Name="txtedad" Keyboard="Numeric"></Entry>

            <Label Text="CORREO ELECTRONICO:"></Label>
            <Entry x:Name="txtcorreo" Keyboard="Email"></Entry>

            <Button x:Name="btnbinding" Text="ENVIAR INFOMACION" Clicked="btnbinding_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>